<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>all-${project.version}</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>gatling-all-${project.version}</baseDirectory>
	<moduleSets>
		<moduleSet>

			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>com.excilys.ebi.gatling:gatling-core</include>
				<include>com.excilys.ebi.gatling:gatling-http</include>
				<include>com.excilys.ebi.gatling:gatling-statistics</include>
				<include>com.excilys.ebi.gatling:gatling-app</include>
			</includes>
			<binaries>
				<unpack>false</unpack>
				<outputDirectory>lib/</outputDirectory>
				<dependencySets>
					<dependencySet>
						<includes />
						<outputDirectory>lib/deps/</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>src/main/assembly/assembly-structure</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>**/.gitkeep</exclude>
				<exclude>bin/*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/assembly/assembly-structure/bin/gatling.sh</source>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
			<outputDirectory>/bin/</outputDirectory>
		</file>
		<file>
			<source>src/main/assembly/assembly-structure/bin/gatling.bat</source>
			<filtered>true</filtered>
			<outputDirectory>/bin/</outputDirectory>
		</file>
	</files>
</assembly>